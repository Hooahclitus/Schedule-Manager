<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="8.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.schedule_manager.controller.AppointmentController">
    <padding>
        <Insets bottom="14.0" left="14.0" right="14.0" top="14.0" />
    </padding>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Label text="Appointment ID" />
        <TextField fx:id="appointmentID" disable="true" prefWidth="170.0" text="Auto-Generated" />
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Label text="Title" />
        <TextField fx:id="title" prefWidth="170.0" />
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Label text="Description" />
        <TextField fx:id="description" prefWidth="170.0" />
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Label text="Location" />
        <TextField fx:id="location" prefWidth="170.0" />
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Label text="Contact" />
        <ComboBox fx:id="contacts" prefWidth="170.0" />
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Label text="Type" />
        <TextField fx:id="type" prefWidth="170.0" />
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="11.0">
        <Label text="Date" />
        <DatePicker fx:id="date" prefWidth="170.0" promptText="MM/DD/YYYY" />
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Label text="Start Time" />
        <ComboBox fx:id="startHour" prefWidth="75.0" promptText="Hour" />
        <ComboBox fx:id="startMinute" prefWidth="85.0" promptText="Minute" />
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Label text="End Time" />
        <ComboBox fx:id="endHour" prefWidth="75.0" promptText="Hour" />
        <ComboBox fx:id="endMinute" prefWidth="85.0" promptText="Minute" />
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Label text="Customer ID" />
        <ComboBox fx:id="customerID" prefWidth="170.0" />
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Label text="User ID" />
        <ComboBox fx:id="userID" prefWidth="170.0" />
    </HBox>
    <HBox alignment="CENTER" spacing="10.0">
        <padding>
            <Insets top="2.0" />
        </padding>
        <Button fx:id="submit" disable="true" mnemonicParsing="false" onAction="#insertOrUpdateAppointment" prefWidth="75.0" text="Submit" />
        <Button mnemonicParsing="false" onAction="#cancel" prefWidth="75.0" text="Cancel" />
    </HBox>
</VBox>
