<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="8.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="reed.c195_project.controller.CustomerController">
   <children>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="Customer ID" />
            <TextField fx:id="fldCustomerID" disable="true" prefWidth="170.0" text="Auto-Generated" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="Name" />
            <TextField fx:id="fldName" prefWidth="170.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="Address" />
            <TextField fx:id="fldAddress" prefWidth="170.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="Country" />
            <ComboBox fx:id="comboCountry" prefWidth="170.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="Division" />
            <ComboBox fx:id="comboDivision" disable="true" prefWidth="170.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="Postal Code" />
            <TextField fx:id="fldPostalCode" prefWidth="170.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="Phone" />
            <TextField fx:id="fldPhoneNumber" prefWidth="170.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="btnAction" disable="true" mnemonicParsing="false" onAction="#insertCustomer" prefWidth="75.0" text="Add" />
            <Button mnemonicParsing="false" onAction="#cancel" prefWidth="75.0" text="Cancel" />
         </children>
         <padding>
            <Insets top="2.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="14.0" left="14.0" right="14.0" top="14.0" />
   </padding>
</VBox>
