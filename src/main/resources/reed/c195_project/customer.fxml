<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="8.0"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="reed.c195_project.controller.CustomerController">
    <padding>
        <Insets bottom="14.0" left="14.0" right="14.0" top="14.0"/>
    </padding>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Label text="Customer ID"/>
        <TextField fx:id="customerID" disable="true" prefWidth="170.0"/>
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Label text="Name"/>
        <TextField fx:id="name" prefWidth="170.0"/>
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Label text="Address"/>
        <TextField fx:id="address" prefWidth="170.0"/>
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Label text="Country"/>
        <ComboBox fx:id="country" prefWidth="170.0"/>
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Label text="Division"/>
        <ComboBox fx:id="division" prefWidth="170.0"/>
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Label text="Postal Code"/>
        <TextField fx:id="postalCode" prefWidth="170.0"/>
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Label text="Phone"/>
        <TextField fx:id="phoneNumber" prefWidth="170.0"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10.0">
        <padding>
            <Insets top="2.0"/>
        </padding>
        <Button fx:id="submit" disable="true" mnemonicParsing="false" onAction="#insertOrUpdateCustomer" prefWidth="75.0"
                text="Update"/>
        <Button mnemonicParsing="false" onAction="#cancel" prefWidth="75.0" text="Cancel"/>
    </HBox>
</VBox>
